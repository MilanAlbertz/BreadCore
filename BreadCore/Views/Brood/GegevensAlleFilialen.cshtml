@model BreadCore.Models.ViewModels.GegevensAlleFilialenViewModel
@using static BreadCore.Models.BroodType
@using Microsoft.Data.SqlClient

<h1 style="text-align: center; padding-top: 20px">Gegevens Alle Filialen</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Brood Type
            </th>
            <th>
                Hoeveelheid Gemiddelde Gebakken
            </th>
            <th>
                Hoeveelheid Gemiddelde Derving
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.BroodTypes.Count; i++)
        {
            <tr>
                <td>
                    @Model.BroodTypes[i].Type
                </td>
                <td>
                    @Model.HoeveelheidGebakken[i]
                </td>
                <td>
                    @Model.HoeveelheidDerving[i]
                </td>
            </tr>
        }
    </tbody>
</table>



