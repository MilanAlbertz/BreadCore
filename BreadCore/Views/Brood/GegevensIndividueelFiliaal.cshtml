@model List<Brood>
@using static BreadCore.Models.BroodType
@using Microsoft.Data.SqlClient

@{
    ViewData["Title"] = "GegevensIndividueelFiliaal";
    var brood = Model.First();
}
<h1 style="text-align: center; padding-top: 20px">Gegevens Filiaal: @brood.GebakkenFiliaal.FiliaalNaam</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Brood Type
            </th>
            <th>
                Hoeveelheid Gebakken
            </th>
            <th>
                Hoeveelheid Derving
            </th>
            <th>
                Medewerker
            </th>
            <th>
                Datum
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <td>
                    @item.BroodType.Type
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoeveelheidGebakken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoeveelheidDerving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedewerkerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TijdGebakken)
                </td>
            </tr>
        }
    </tbody>
</table>



