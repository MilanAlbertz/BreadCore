@model BreadCore.Models.Medewerker

@{
    ViewData["Title"] = "Edit";
}
<h1 class="text-center" style="padding-top: 20px">Medewerker Bewerken</h1>

<div class="col-md-4" style="display:block; width:50%; margin:0 auto;">
    <div class="col-md-4" style="display:block; width:50%; margin:0 auto;">
        <form asp-action="Edit" class="loginField" style="border: solid; border-width: 5px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BedienerNr" class="control-label"></label>
                <input asp-for="BedienerNr" class="form-control" />
                <span asp-validation-for="BedienerNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wachtwoord" class="control-label"></label>
                <input asp-for="Wachtwoord" class="form-control" />
                <span asp-validation-for="Wachtwoord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rol" class="control-label"></label>
                <select asp-for="Rol" class="form-select">
                    <option selected>Medewerker</option>
                    <option value="Manager">Manager</option>
                    <option value="Systeem Beheerder">Systeem Beheerder</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FiliaalId" class="control-label"></label>
                <input asp-for="FiliaalId" class="form-control" />
                <span asp-validation-for="FiliaalId" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-top: 5px">
                <button type="submit" class="btn-danger" style="height: 35px; border: none">
                    <a style="color: white!important; text-decoration: none" asp-controller="Medewerkers" asp-action="MedewerkersBeheren">Annuleer</a>
                </button>
                <input type="submit" value="Edit" class="btn btn-primary" style="height: 35px; padding-top: 0px; padding-bottom: 0px; border-radius: 0px; margin-top: -5px" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
