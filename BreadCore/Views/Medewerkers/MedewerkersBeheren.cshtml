@model IEnumerable<BreadCore.Models.Medewerker>

@{
    ViewData["Title"] = "MedewerkersBeheren";
}
<button><a asp-area="" asp-controller="Medewerkers" asp-action="Logout">Logout</a></button>

<h1 style="text-align: center">Medewerkers Beheren</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BedienerNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wachtwoord)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.FiliaalId)
            </td>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BedienerNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wachtwoord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.FiliaalId)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
