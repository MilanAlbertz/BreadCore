@model BreadCore.Models.Filiaal

@{
    ViewData["Title"] = "Details";
}

<header style="">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3" style="margin-bottom: 0px!important; border-bottom: solid; background-color: lightgray!important">
        <div class="container-fluid">
            <a asp-area="" asp-controller="Medewerkers" asp-action="SysteemBeheerder"><img src="~/Images/logo aldi.png" style="width:auto; height: 50px" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item" style="border-right: solid;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Medewerkers" asp-action="MedewerkersBeheren">Medewerkers Beheren</a>
                    </li>
                    <li class="nav-item" style="border-right: solid;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Filiaal" asp-action="FilialenBeheren">Filialen Beheren</a>
                    </li>
                    <li class="nav-item  me-auto">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Medewerkers" asp-action="Logout">Uitloggen</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<h1 class="text-center" style="padding-top: 20px">Details</h1>

<div>
    <h4> Filiaal: @Html.DisplayFor(modelItem => Model.FiliaalNaam)</h4>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Bediener Nummer
                </th>
                <th>
                    Wachtwoord
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Medewerkers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BedienerNr)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Wachtwoord)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FiliaalId">Edit</a> |
    <a asp-action="FilialenBeheren">Back to List</a>
</div>