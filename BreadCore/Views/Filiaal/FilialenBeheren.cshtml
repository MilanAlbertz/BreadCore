    ViewData["Title"] = "FilialenBeheren";
}
<button><a asp-area="" asp-controller="Medewerkers" asp-action="Logout">Logout</a></button>

<h1 style="text-align: center">Filialen Beheren</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
