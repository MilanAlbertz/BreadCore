@model BreadCore.Models.Filiaal

@{
    ViewData["Title"] = "Edit";
}

<header style="">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3" style="margin-bottom: 0px!important; border-bottom: solid; background-color: lightgray!important">
        <div class="container-fluid">
            <a asp-area="" asp-controller="Medewerkers" asp-action="SysteemBeheerder"><img src="~/Images/logo aldi.png" style="width:auto; height: 50px" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item" style="border-right: solid;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Medewerkers" asp-action="MedewerkersBeheren">Medewerkers Beheren</a>
                    </li>
                    <li class="nav-item" style="border-right: solid;">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Filiaal" asp-action="FilialenBeheren">Filialen Beheren</a>
                    </li>
                    <li class="nav-item  me-auto">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Medewerkers" asp-action="Logout">Uitloggen</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h1 class="text-center" style="padding-top: 20px">Filiaal Bewerken</h1>

<div class="col-md-4" style="display:block; width:50%; margin:0 auto;">
    <div class="col-md-4" style="display:block; width:50%; margin:0 auto;">
        <form asp-action="Edit" class="loginField" style="border: solid; border-width: 5px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FiliaalId" />
            <div class="form-group">
                <label asp-for="FiliaalNaam" class="control-label"></label>
                <input asp-for="FiliaalNaam" class="form-control" />
                <span asp-validation-for="FiliaalNaam" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-top: 5px">
                <button type="submit" class="btn-danger" style="height: 35px; border: none">
                    <a style="color: white!important; text-decoration: none" asp-controller="Filiaal" asp-action="FilialenBeheren">Annuleer</a>
                </button>
                <input type="submit" value="Edit" class="btn btn-primary" style="height: 35px; padding-top: 0px; padding-bottom: 0px; border-radius: 0px; margin-top: -5px" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
